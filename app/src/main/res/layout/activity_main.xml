<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLaunchToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Launch Toast Activity" />

    <Button
        android:id="@+id/btnLaunchSnackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLaunchToast"
        android:layout_centerHorizontal="true"
        android:text="Launch Snackbar Activity" />

    <Button
        android:id="@+id/btnLaunchDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLaunchSnackbar"
        android:layout_centerHorizontal="true"
        android:text="Launch Dialog Activity" />

    <Button
        android:id="@+id/btnLaunchNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLaunchDialog"
        android:layout_centerHorizontal="true"
        android:text="Launch Notification Activity" />
</LinearLayout>
